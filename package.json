{
  "name": "eternalgy-admin-dashboard-2.0",
  "version": "1.0.0",
  "description": "Eternalgy Admin Dashboard 2.0 - PostgreSQL-based ERP admin dashboard",
  "main": "backend/src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "db:studio": "cd backend && npm run db:studio",
    "db:push": "cd backend && npm run db:push"
  },
  "keywords": [
    "eternalgy",
    "admin",
    "dashboard",
    "erp",
    "postgresql",
    "react",
    "typescript",
    "railway"
  ],
  "author": "Eternalgy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/Eternalgy-Admin-Dashboard-2.0.git"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}